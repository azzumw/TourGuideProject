<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="1dp"
    android:id="@+id/list_item"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/list_item_card_view"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:scaleType="centerCrop"
            android:id="@+id/list_item_image_view" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/list_item_name"
        android:paddingLeft="5dp"
        android:layout_width="295dp"
        android:layout_height="22dp"
        android:gravity="bottom"
        android:text="@string/name"
        android:textColor="@color/tabtextcolor"
        android:textAppearance="?android:textAppearanceMedium"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/list_item_card_view" />

    <TextView
        android:id="@+id/list_item_desc"
        android:paddingLeft="5dp"
        android:layout_width="295dp"
        android:layout_height="22dp"
        android:layout_below="@id/list_item_desc"
        android:gravity="left"
        android:text="@string/description"
        app:layout_constraintLeft_toRightOf="@+id/list_item_card_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_name" />

    <TextView
        android:id="@+id/list_item_address"
        android:paddingLeft="5dp"
        android:layout_width="295dp"
        android:layout_height="22dp"
        android:layout_below="@id/list_item_desc"
        android:gravity="left"
        android:text="@string/address"
        app:layout_constraintLeft_toRightOf="@+id/list_item_card_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_desc" />

    <TextView
        android:id="@+id/list_item_phone"
        android:paddingLeft="5dp"
        android:layout_width="295dp"
        android:layout_height="22dp"
        android:layout_below="@id/list_item_address"
        android:gravity="left"
        android:text="@string/phone"
        app:layout_constraintLeft_toRightOf="@+id/list_item_card_view"
        app:layout_constraintTop_toBottomOf="@id/list_item_address" />


</android.support.constraint.ConstraintLayout>