<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macintosh.tourguideproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TransportActivity"
            android:label="@string/transport"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".RestaurantANDcafeActivity"
            android:label="@string/restaurants"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".LocalShopsActivity"
            android:label="@string/shops"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".PoiActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/poi">

        </activity>
    </application>

</manifest>